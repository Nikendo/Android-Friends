<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginTop="@dimen/margin"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="fullname"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@id/civ_avatar"
            app:layout_constraintStart_toEndOf="@id/civ_avatar"
            app:layout_constraintEnd_toEndOf="@id/view_online"/>

    <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="city"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/civ_avatar"
            app:layout_constraintStart_toEndOf="@id/civ_avatar"
            app:layout_constraintEnd_toEndOf="@id/view_online"/>

    <View
            android:id="@+id/view_online"
            android:layout_width="@dimen/online_size"
            android:layout_height="@dimen/online_size"
            android:layout_marginRight="@dimen/margin"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/civ_avatar"
            app:layout_constraintBottom_toBottomOf="@id/civ_avatar"/>

</android.support.constraint.ConstraintLayout>